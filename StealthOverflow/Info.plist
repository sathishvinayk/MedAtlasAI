<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>com.yourcompany.StealthOverlay</string>
    <key>CFBundleName</key>
    <string>StealthOverlay</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1.0</string>
    
    <key>LSUIElement</key>
    <true/>

    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSExceptionDomains</key>
        <dict>
            <key>openrouter.ai</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSAllowsArbitraryLoads</key>
                <true/>
            </dict>
        </dict>
    </dict>

    <key>ATSApplicationFontsPath</key>
    <array>
        <string>Oxanium-Regular.ttf</string>
        <string>Oxanium-Medium.ttf</string>
        <string>Oxanium-SemiBold.ttf</string>
        <string>Oxanium-Bold.ttf</string>
        <string>Oxanium-ExtraBold.ttf</string>
        <string>Lato-Italic.ttf</string>
    </array>
</dict>
</plist>
